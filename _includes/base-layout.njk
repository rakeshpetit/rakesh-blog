---
layout: index.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
{% for post in posts %}
  <article>
    <h1>{{ post.data.title }}</h1>
    <time datetime="{{ post.date | dateIso }}">
      {{ post.date | dateReadable }}
    </time>
    {% excerpt post %}
    <a 
      href="{{ post.url | url }}"
      aria-label="Read more on {{ post.data.title }}">Read more</a>
      <br>
  </article>
{% endfor %}